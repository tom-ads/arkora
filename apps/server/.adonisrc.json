{
  "typescript": true,
  "commands": [
    "./commands",
    "@adonisjs/core/build/commands/index.js",
    "@adonisjs/repl/build/commands",
    "@adonisjs/lucid/build/commands",
    "@adonisjs/bouncer/build/commands"
  ],
  "exceptionHandlerNamespace": "App/Exceptions/Handler",
  "aliases": {
    "App": "app",
    "Config": "config",
    "Database": "database",
    "Contracts": "contracts",
    "Start": "start",
    "Helpers": "helpers",
    "Resources": "resources"
  },
  "preloads": [
    "./start/routes",
    "./start/kernel",
    {
      "file": "./start/validator",
      "environment": [
        "web",
        "test"
      ]
    },
    "./start/bouncer"
  ],
  "providers": [
    "./providers/AppProvider",
    "@adonisjs/core",
    "@adonisjs/lucid",
    "@adonisjs/auth",
    "@adonisjs/session",
    "@adonisjs/shield",
    "@adonisjs/bouncer",
    "@adonisjs/route-model-binding/build/providers/RmbProvider"
  ],
  "aceProviders": [
    "@adonisjs/repl"
  ],
  "tests": {
    "suites": [
      {
        "name": "integration",
        "files": [
          "tests/integration/**/*.spec(.ts|.js)"
        ],
        "timeout": 60000
      },
      {
        "name": "unit",
        "files": [
          "tests/unit/**/*.spec(.ts|.js)"
        ],
        "timeout": 60000
      }
    ]
  },
  "testProviders": [
    "@japa/preset-adonis/TestsProvider",
    "./providers/TestRouteProvider"
  ]
}
